{%  extends 'base.html.twig' %}

{%  block title 'Registration' %}

{% block body %}
    <h4 class="mt-4"> Registration form </h4>

   

    {{form_start(form)}}
    <div class="container col-4 mt-5 " style="text-align: right">
       {{form_errors(form)}}

        {{form_row(form.username, {
            'attr':{
                'class':'mb-3, ml-3'
            }
        })}}
        {{form_row(form.email, {
            'attr':{
                'class':'mb-3, ml-3'
            }
        })}}
        {{form_row(form.password, {
            'attr':{
                'class':'mb-3, ml-3'
            }
        })}}
        {{form_row(form.confirm_password, {
            'attr':{
                'class':'mb-3, ml-3'
            }
        })}}
        <button type="submit" class="btn btn-light mt-5 mb-5">Subscribe</button>
    </div>
    {{form_end(form)}}


{% endblock %}