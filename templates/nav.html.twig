<div class="" id="header">
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark header">
		<a class="navbar-brand" href="{{ path('home') }}">Pibs</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav mr-auto">
				<li class="nav-item">
					<a class="nav-link {% if app.request.attributes.get('_route') == 'background' %} active {% endif %} " href="{{ path('background') }}">back from</a>
				</li>
				<li class="nav-item">
					<a class="nav-link {% if app.request.attributes.get('_route') == 'post_index' %} active {% endif %} " href="{{ path('post_index') }}">pibadi</a>
				</li>
				<li class="nav-item">
					<a class="nav-link {% if app.request.attributes.get('_route') == 'coding' %} active {% endif %} " href="{{ path('coding') }}">for fun</a>
				</li>
				<li class="nav-item">
					<a class="nav-link {% if app.request.attributes.get('_route') == 'pibshop' %} active {% endif %} " href="{{ path('pibshop') }}">pibshop</a>
				</li>
			</ul>
			{% if app.user %}
				{% for role in app.user.roles %}
					{% if role == "ROLE_ADMIN" %}
						<ul class="navbar-nav mr-3">
							<div class="btn-group">
								<button type="button" class="btn btn-secondary dropdown-toggle" id="deroulant" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-display="static">Dashboard</button>
								<div class="dropdown-menu dropdown-menu-md-right" aria-labelledby="deroulant">
									<a class="dropdown-item" href="{{ path('admin_users') }}">User Manager</a>
									<a class="dropdown-item" href="{{ path('admin_posts') }}">Blog Manager</a>

								</div>
							</div>
						</ul>
					{% endif %}
				{% endfor %}
				<ul class="navbar-nav">
					<a href="{{ path('myAccount', {'id': app.user.id}) }}" class="nav-link">My Account</a>
				</ul>
				<ul class="navbar-nav">
					<a href="{{ path('logout') }}" class="nav-link">Disconnect</a>
				</ul>
			{% endif %}
			{% if not app.user %}
				<ul class="navbar-nav">
					<a href="{{ path('security_registration') }}" class="nav-link">Subscribe</a>
				</ul>
				<ul class="navbar-nav">
					<a href="{{ path('login') }}" class="nav-link">Connect</a>
				</ul>
			{% endif %}
		</div>
	</nav>
</div>
