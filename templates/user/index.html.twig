{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>Users list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Number</th>
                <th>Username</th>
                <th>Comments</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr class="">
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.comments|length }}</td>
                {{ include('user/_display_roles.html.twig') }}
               
                <td class="row">
                    <a class="btn btn-light mb-2" href="{{ path('admin_user_show', {'id': user.id}) }}">Show</a>
                    <a class="btn btn-info mb-2" href="{{ path('admin_user_edit', {'id': user.id}) }}">Edit</a>
                    <a> {{ include('user/_delete_form.html.twig') }} </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="pagination justify-content-center">{{ knp_pagination_render(users)}}</div>

{% endblock %}
